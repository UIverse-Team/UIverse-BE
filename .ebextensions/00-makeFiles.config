files:
    "/sbin/appstart":
        mode: "000755"
        owner: webapp
        group: webapp
        content: |
            #!/usr/bin/env bash
            cp /var/app/current/backend/JiShop/build/libs/JiShop-0.0.1-SNAPSHOT.jar /var/app/current/application.jar
            JAR_PATH=/var/app/current/application.jar

            # run app
            java -Dspring.profiles.active=test -Dfile.encoding=UTF-8 -jar $JAR_PATH

